<Window x:Class="LotteryPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LotteryPicker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        Height="275" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Width"
        Title="Lottery Numbers Generator">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <StackPanel Margin="0,50,0,0">
        <ListBox HorizontalAlignment="Center"
                 MinHeight="50"
                 Padding="0"
                 BorderThickness="0"
                 IsSynchronizedWithCurrentItem="True"
                 ItemsSource="{Binding SelectedNumbers}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Border VerticalAlignment="Top"
                                Width="40"
                                Height="40"
                                CornerRadius="20"
                                BorderThickness="3"
                                BorderBrush="Red">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="LightGray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBonus}" Value="True">
                                            <Setter Property="Background" Value="DarkRed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Text="{Binding Number}"/>
                        </Border>
                        <TextBlock TextAlignment="Center"
                                   FontSize="14"
                                   Foreground="Red"
                                   Text="Bonus"
                                   Visibility="{Binding IsBonus, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="VerticalContentAlignment" Value="Top" />
                    <Setter Property="Focusable" Value="False" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBonus}" Value="True">
                            <Setter Property="Foreground" Value="White" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Button Margin="0,20,0,0"
                Width="100"
                Padding="10,5"
                Content="Generate"
                BorderThickness="2"
                FontSize="16"
                Command="{Binding GenerateNumbersCommand}" />
    </StackPanel>

</Window>
